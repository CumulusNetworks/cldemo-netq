auto lo
iface lo inet loopback

# Removal of eth0 or the 10.255.0.3 gateway 
# will break connectivity to this node. You will have to recover via console.
auto eth0
iface eth0 inet static
    address 10.255.0.1/16
    gateway 10.255.0.3

# Eth1 connects into the management network to the other devices in the lab.
auto eth1
iface eth1 inet static
    address 192.168.0.254/24

auto eth2
iface eth2

auto eth3
iface eth3
